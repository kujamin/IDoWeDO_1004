<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="240dp"
    android:background="@drawable/popbackground_layout"
    tools:context="com.idowedo.firstproject3.QuestionPopupActivity"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/TextSendToManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="개발자에게 메일 보내기"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:padding="5dp">

        <Button
            android:id="@+id/Btn_question_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/right_line"
            android:text="네"
            android:fontFamily="@font/nanumbarunpenr"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/Btn_question_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="아니요"
            android:fontFamily="@font/nanumbarunpenb"
            android:textColor="@color/colordarkgray"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>