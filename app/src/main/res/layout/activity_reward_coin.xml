<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="180dp"
    android:background="@drawable/popbackground_layout"
    tools:context="com.idowedo.firstproject3.RewardCoinActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="23sp"
        android:textColor="#787878"
        android:textStyle="bold"
        android:fontFamily="@font/nanumbarunpenr"
        android:text="챌린지 참가 보상" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanumbarunpenr"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="+"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/coin_export" />

        <TextView
            android:id="@+id/textRewardCoin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanumbarunpenr"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="100"
            android:textColor="#000000"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>