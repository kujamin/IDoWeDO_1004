<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    android:background="@drawable/popbackground_layout"
    tools:context="com.idowedo.firstproject3.DeleteUser"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textLogoutQ"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal|bottom"
            android:text="회원탈퇴 하시겠습니까?"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/textLogoutW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:layout_marginBottom="10dp"
            android:text="회원 탈퇴 시 모든 유저 정보가 삭제됩니다"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="12sp"
            android:textColor="#FF0000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">

        <Button
            android:id="@+id/btn_delete_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttons_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:text="아니요"
            android:textSize="18sp"
            android:fontFamily="@font/nanumbarunpenr"/>

        <Button
            android:id="@+id/btn_delete_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttons_layout"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="네"
            android:textSize="18sp"
            android:fontFamily="@font/nanumbarunpenb"/>

    </LinearLayout>

</LinearLayout>