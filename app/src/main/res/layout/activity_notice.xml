<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:title="공지사항"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay">


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#CACACA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:orientation="vertical"
                android:background="#fff">

                <LinearLayout
                    android:id="@+id/notice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="21/10/19"
                            android:textColor="#777777"
                            android:fontFamily="@font/nanumbarunpenr"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="서비스 업데이트 내용 공유"
                            android:fontFamily="@font/nanumbarunpenb"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageNotice1"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noticeContent1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eee"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:fontFamily="@font/nanumbarunpenr"
                        android:textSize="16dp"
                        android:textColor="#575757"
                        android:text="1. 상점 아이템, 배지 추가\n2. 경험치, 레벨 단위 조정\n3. 화면 전체 수정\n\n10/19 서비스 업데이트 사항입니다. 감사합니다\n" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:orientation="vertical"
                android:background="#fff">

                <LinearLayout
                    android:id="@+id/notice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="21/10/15"
                            android:textColor="#777777"
                            android:fontFamily="@font/nanumbarunpenr"/>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="시스템 정기점검 알림"
                            android:fontFamily="@font/nanumbarunpenb"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageNotice2"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noticeContent2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eee"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:fontFamily="@font/nanumbarunpenr"
                        android:textSize="16dp"
                        android:textColor="#575757"
                        android:text="금주 10월 16일 토요일 04:00 ~ 06:00\n시스템 정기 정검이 있습니다.\n\n더 나은 시스템 업데이트로 찾아뵙겠습니다.\n" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:orientation="vertical"
                android:background="#fff">

                <LinearLayout
                    android:id="@+id/notice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="21/09/19"
                            android:textColor="#777777"
                            android:fontFamily="@font/nanumbarunpenr"/>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="코인 사용관련 안내"
                            android:fontFamily="@font/nanumbarunpenb"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageNotice3"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noticeContent3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eee"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:fontFamily="@font/nanumbarunpenr"
                        android:textSize="15dp"
                        android:textColor="#575757"
                        android:text="레벨업 보상, 챌린지 보상으로 얻은 코인은\n\n상점에서 캐릭터 아이템을 구매할 때 사용할 수 있습니다.\n\n구매한 캐릭터 아이템은 꾸미기 페이지에서 입힐 수 있습니다.\n" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:orientation="vertical"
                android:background="#fff">

                <LinearLayout
                    android:id="@+id/notice4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView56"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="21/09/18"
                            android:textColor="#777777"
                            android:fontFamily="@font/nanumbarunpenr"/>

                        <TextView
                            android:id="@+id/textView57"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="닉네임 변경 방법"
                            android:fontFamily="@font/nanumbarunpenb"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageNotice4"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/down_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noticeContent4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eee"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:fontFamily="@font/nanumbarunpenr"
                        android:textSize="15dp"
                        android:textColor="#575757"
                        android:text="닉네임이 적혀있는 부분을 길게 누르세요\n\n변경을 위해서는 30코인을 지불해야합니다.\n\n30코인 지불로 닉네임 변경을 원하시면 변경 팝업에서\n\n예를 누르면 뜨는 화면에서 바꿀 닉네임을 다시 입력하세요\n" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>