<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="260dp"
    android:background="@drawable/popbackground_layout"
    tools:context="com.idowedo.firstproject3.Logout_Popup"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textLogoutQ"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_horizontal|bottom"
            android:text="로그아웃 하시겠습니까?"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_logout_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenr"
            android:textSize="16sp"
            android:background="@drawable/buttons_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:text="아니요" />

        <Button
            android:id="@+id/btn_logout_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="16sp"
            android:background="@drawable/buttons_layout"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:text="네" />

    </LinearLayout>

</LinearLayout>